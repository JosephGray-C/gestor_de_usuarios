<%- include('template/header') %>

    <% if (msg && typeof msg === 'string' && msg.trim() !== '') { %>
        <div id="toast" class="toast centered"><%= msg %></div>
        <script>
        window.addEventListener('DOMContentLoaded', function () {
            const toast = document.getElementById('toast');
            toast.classList.add('show');
            setTimeout(() => {
            toast.classList.remove('show');
            }, 4000);
        });
        </script>   
    <% } %>

    <div class="container-listar-usuarios">

        <% usuarios.forEach(usuario => { %>
            <div class="usuario-container">

                <div class="form-container-listar-usuarios">

                    <% if (usuario.id_rol == 1) { %>
                        <div class="circle">
                            <span class="blue box"></span>
                        </div>
                    <% } else if (usuario.id_rol == 2) { %>
                        <div class="circle">
                            <span class="purple box"></span>
                        </div>
                    <% } else { %>
                        <div class="circle">
                            <span class="yellow box"></span>
                        </div>
                    <% } %>

                    <p class="title">
                        
                    </p>

                    <div class="input-group field">
                        <label for="rol">Rol del trabajador</label>
                        <% if (usuario.id_rol == 1) { %>
                            <p class="">Empleado</p>
                        <% } else if (usuario.id_rol == 2) { %>
                            <p class="">Manager</p>
                        <% } else { %>
                            <p class="">Recursos Humanos</p>
                        <% } %>
                    </div>

                    <div class="input-group field">
                        <label for="nombre">Nombre del funcionario</label>
                        <p><%= usuario.nombre %></p>
                    </div>

                    <div class="input-group field">
                        <label for="nombre">Identificac√≠on del trabajador</label>
                        <p><%= usuario.identificacion %></p>
                    </div>

                </div>

            </div>
        <% }) %>
        
    </div>

<%- include('template/footer') %>