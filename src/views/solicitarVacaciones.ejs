<%- include('template/header') %>

    <% if (msg && typeof msg === 'string' && msg.trim() !== '') { %>
        <div id="toast" class="toast centered"><%= msg %></div>
        <script>
        window.addEventListener('DOMContentLoaded', function () {
            const toast = document.getElementById('toast');
            toast.classList.add('show');
            setTimeout(() => {
            toast.classList.remove('show');
            }, 4000);
        });
        </script>   
    <% } %>

    
    <div class="container-solicitud">

        <div class="form-container-solicitud">

            <p class="title">Solicitud de vacaciones</p>

            <form class="form" action="crear" method="post">

                <div class="flex">

                    <div class="input-group field">
                        <label for="fecha_inicio">Fecha Inicio</label>
                        <input type="date" name="fecha_inicio" id="fecha_inicio">
                    </div>

                    <div class="input-group field">
                        <label for="fecha_fin">Fecha Fin</label>
                        <input type="date" name="fecha_fin" id="fecha_fin">
                    </div>

                </div>

                <div class="flex">

                    <div class="input-group">
                        <label for="id_manager">Manager</label>
                        <select class="" name="id_manager" id="id_manager">
                            <% usuarios.forEach(usuario => { %>
                                <% if(usuario.id_rol == 2) { %>
                                    <option value="<%= usuario.id_ususario %>" >
                                        <%= usuario.nombre %>
                                    </option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="input-group">
                        <label for="id_rrhh">Recursos Humanos</label>
                        <select class="" name="id_rrhh" id="id_rrhh">
                            <% usuarios.forEach(usuario => { %>
                                <% if(usuario.id_rol == 3) { %>
                                    <option value="<%= usuario.id_ususario %>">
                                        <%= usuario.nombre %>
                                    </option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>

                </div>

                <div class="input-group">
                    <label for="motivo">Motivo</label>
                    <textarea name="motivo" id="motivo"></textarea>
                </div>

                <button class="sign">Realizar Solicitud</button>

            </form>

        </div>
        
    </div> 
<%- include('template/footer') %>