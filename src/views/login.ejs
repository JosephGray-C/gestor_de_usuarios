<%- include('template/header') %>
    <div class="container-login">

        <div class="form-container">

            <p class="title">Inicio de sesión</p>
  
            <form class="form" action="/login" method="post">

                <div class="input-group">

                    <label for="identificacion">Identificación</label>
                    
                    <input type="text" name="identificacion" id="identificacion" value="<%= data?.identificacion || ''%>">
                </div>

                <div class="input-group">

                    <label for="contrasenia">Contraseña</label>
                    <input type="password" name="contrasenia" id="contrasenia" value="">

                    <div class="forgot">
                        <a rel="noopener noreferrer" href="#">Olvidaste tu contraseña ?</a>
                    </div>
                </div>

                <button class="sign">Iniciar sesión</button>

            </form>

            <p class="signup">
                No tienes una cuenta?
                <a rel="noopener noreferrer" href="/registro" class="">Regístrate</a>
            </p>

        </div>

    </div> 
<%- include('template/footer') %>